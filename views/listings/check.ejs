











<% layout("/layouts/boilerplate") %>
<div class="container p-5">
    <div class="row justify-content-center">
        <div class="col-md-4 col-lg-7">
            <div class="card listing-card">
                <img src="<%= listing.image %>" 
                     class="card-img-top" 
                     alt="<%= listing.title %>" 
                     style="height: 300px; object-fit: cover;">
                
                <div class="card-body">
                    <h3 class="card-title mb-3 fw-bold"><%= listing.title %></h3>
                    <p class="card-text text-muted mb-3"><%= listing.description %></p>
                    <h5 class="text-success fw-semibold mb-4">Rs <%= listing.price %> / night</h5>
                    
                    
                    <div class="row">
                            <div class="col-7 d-flex gap-4">
                                <form action="/listings/<%= listing._id %>/edit" method="get">
                                    <button class="btn btn-outline-dark px-4">Edit</button>
                                </form>

                                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure you want to delete this listing?');">
                                    <button class="btn btn-danger px-3">Delete</button>
                                </form>
                            </div>
                        </div>    
                    <% } %>
                </div>
            </div>
        </div>
           
            
        <div class="row">
           
        
        </div>
    </div>
</div>