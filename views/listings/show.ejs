<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3 mb-2">
        <h3><%=listing.title%></h3>
    </div>
    <div class="card show-img col-6 offset-3">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
    </div>    
    <div class="card show-img col-6 offset-3">
        <p class="fst-italic pt-2">Owned by : <%= listing.owner.username%></p>
        <div class="card-body mt-3">
            <p class="card-text"><%= listing.description %></p>
            <p><b>Rs : <%= listing.price %>/</b>Day</p>
        </div>
    </div>
    <% if(currentUser && (currentUser._id.toString() === listing.owner._id.toString()) ) {%>                
        <div class="btn-group gap-3 mt-2">
            <form action="/listings/<%= listing._id %>/edit" method="get" class="col-1 offset-3">
                <button class="btn btn-danger col-12">Edit</button>
            </form>
            <form action="/listings/<%= listing._id %>?_method=DELETE"  method="post" class="col-1">
                <button class="btn btn-dark col-12">Delete</button>
            </form>
        </div>
    <% } %>
    <div class="col-8 gap-2 offset-3 mt-4">
        <% if(currentUser) {%>
            <hr />
            <h3 class="pt-2">Leave a Review</h3>
            <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation" >
                <div class="mt-2 mb-3">
                    <label for="rating">Rating</label>
                    <fieldset class="starability-slot" id="rating">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    <label for="comment"  class="form-label mt-1">CommentðŸš€</label>
                    <textarea name="review[comment]" required id="comment" rows="5" cols="30" class="form-control" placeholder="Leave a comment here"></textarea>
                    <div class="invalid-feedback">
                        please leave a commentðŸš€
                    </div>
                </div>
                <div class="valid-feedback">
                        Looks good!
                </div>
                <button class="btn  btn-outline-dark mt-3 mb-1">SubmitðŸš€</button>
            </form>
        <% } %>

        <hr >
        
        <div class="row mb-4 justify-content-between">
            <h2><b>All Reviews</b></h2>    
            <% for(review of listing.reviews) {%>
                <div class="mt-4 card col-5 pl-2 pr-2 pt-2">
                    <div class="card-body">
                        <h5 class="card-text fw-bold">@<%=review.author.username%></h5>
                        <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                        <p class="card-text" style="text-align: justify;"><%=review.comment %></p>
                    </div>
                    <% if(currentUser && (review.author._id.equals(currentUser._id))){%>
                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-2 mt-2" >
                        <button class="btn btn-danger btn-sm">
                           Delete
                        </button>
                    </form>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>
