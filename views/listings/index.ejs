<% layout("/layouts/boilerplate") %>
    <style>
        .filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter{
            text-align: center;
            margin-left: 2rem;
            margin-top: 1rem;
            opacity: 0.8;
        }
        .filter:hover{
            cursor: pointer;
            opacity: 1;
        }
        .filters p{
            font-size: 0.8rem;
        }
        .taxes{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            height: 3rem;
            border-radius: 1.5rem;
            /* padding: 0.5rem; */
            padding: 0.5rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
    <div class="filters pt-2">
        <div class="filter">
            <div>
                <i class="fa-solid fa-fire"></i>
            </div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
         <div class="filter">
            <div>
                <i class="fa-solid fa-sailboat"></i>
            </div>
            <p>Boat</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-city"></i>
            </div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-sun"></i>
            </div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-regular fa-chess-rook"></i>
            </div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-tractor"></i>
            </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-snowman"></i>
            </div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-igloo"></i>
            </div>
            <p>Dome</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>Camps</p>
        </div>
        <div class="tax-toggle ms-auto">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input"  type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <br />
   <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
     <%for(let listing of storedListings){%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card listing-card col">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b>
                        <br />
                        &#8360; <%= listing.price.toLocaleString('en-PK', { minimumFractionDigits: 0 }) %>/Night
                        &nbsp;&nbsp;&nbsp;
                        <i class="taxes">+ 15% GST</i>
                    </p>
                </div>
            </div>
        </a>
        
    <% } %>
   </div>
<script>
    let toggleSwitch=document.getElementById("switchCheckDefault");
    toggleSwitch.addEventListener("click",()=>{
        let taxes=document.getElementsByClassName("taxes");
        for(tax of taxes) {
            if(tax.style.display!="inline"){
            tax.style.display="inline";
        }else{
            tax.style.display="none";
        }}
    })
</script>