<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
             <h3 class="mb-5" style="color: #f2424d;">Edit your listing</h3>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" class="form-control" type="text" value="<%=listing.title %>" required name="listing[title]">
                </div>
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" class="form-control" required name="listing[description]"><%= listing.description %></textarea>
                </div>

                <div class="row">
                    <div class="mb-4 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input id="price" class="form-control" type="text" value="<%= listing.price %>" required name="listing[price]">
                    </div>
                    <div class="mb-4 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input id="country" class="form-control" type="text" value="<%= listing.country %>" name="listing[country]" required>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input id="location" class="form-control" type="text" value="<%= listing.location %>"  name="listing[location]" required>
                </div>

                <div class="mb-4">
                    <label for="image" class="form-label">Image</label>
                    <input id="image" class="form-control" type="file" placeholder="Enter image" name="listing[image]" />
                </div>
                <div class="edit-btn add-btn ">
                    <button class="btn btn-dark mb-4 mt-3">confirm</button>
                </div>
            </form>
        </div>
    </div>
    
</body>
</html>