<% if(success && success.length) {%>
    <div class="row">
        <div class="col-6 alert alert-warning alert-success mt-3 offset-3 alert-dismissible d-flex justify-content-between align-items-center fade show" role="alert">
            <span><%= success %></span>        
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>        
        </div>
    </div>
<% } %>
<% if(failure && failure.length) {%>
   <div class="row">
        <div class="col-6 alert alert-warning alert-danger mt-3 offset-3 alert-dismissible d-flex justify-content-between align-items-center fade show" role="alert">
            <span><%= failure %></span>        
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>        
        </div>
    </div>

<% } %>
<% if(error && error.length) {%>
   <div class="row">
        <div class="col-6 alert alert-warning alert-danger mt-3 offset-3 alert-dismissible d-flex justify-content-between align-items-center fade show" role="alert">
            <span><%= error %></span>        
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>        
        </div>
    </div>

<% } %>
